# AND DON'T YOU DARE USE SPACES FOR TABS IN MY CODE
# http://lea.verou.me/2012/01/why-tabs-are-clearly-superior/

require "readline"

def prompt(_prompt = "")
	Readline.readline(_prompt, true).squeeze(" ").strip.downcase
end

require_relative 'lib/delegate'

delegate = Delegate.new

chance = 1000 
puts "Theres a 1 in #{chance} that this will be printed." if rand(1..chance) == 1

loop do
	💬 = prompt("> ")
	delegate.parse(💬)
end
